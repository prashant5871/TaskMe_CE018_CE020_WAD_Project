@model TaskMe.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use shared layout
}

<link rel="stylesheet" href="~/css/register.css" /> <!-- Link the shared CSS -->

<div class="form-container">
    <h2 class="form-title">Create Your Account</h2>

    <!-- Display validation errors -->
    @if (ViewData.ModelState[""] != null)
    {
        <div class="error-message">
            @ViewData.ModelState[""].Errors[0].ErrorMessage
        </div>
    }

    <form asp-action="Register" method="post" class="custom-form" onsubmit="return validatePasswords();">
        <div class="form-group">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-input" />
            <span asp-validation-for="FirstName" class="form-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-input" />
            <span asp-validation-for="LastName" class="form-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-input" />
            <span asp-validation-for="Email" class="form-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-input" type="password" />
            <span asp-validation-for="Password" class="form-error"></span>
        </div>
        <div class="form-group">
            <label for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input id="ConfirmPassword" name="ConfirmPassword" class="form-input" type="password" />
            <span id="confirmPasswordError" class="form-error"></span>
        </div>
        <button type="submit" class="btn-submit">Register</button>
    </form>

    <div class="redirect-link">
        <p>Already have an account? <a href="@Url.Action("Login", "Auth")">Login here</a></p>
    </div>
</div>

<script>
    function validatePasswords() {
        const password = document.querySelector('input[name="Password"]').value;
        const confirmPassword = document.querySelector('input[name="ConfirmPassword"]').value;
        const errorElement = document.getElementById('confirmPasswordError');

        if (password !== confirmPassword) {
            errorElement.textContent = "Passwords do not match!";
            return false; // Prevent form submission
        }

        errorElement.textContent = ""; // Clear error if passwords match
        return true; // Allow form submission
    }
</script>
