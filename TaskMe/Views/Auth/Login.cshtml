@model TaskMe.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use shared layout
}

<link rel="stylesheet" href="~/css/register.css" /> <!-- Link the login CSS file -->

<div class="form-container">
    <h2 class="form-title">Login</h2>

    <!-- Display validation errors -->
    @if (ViewData.ModelState[""] != null)
    {
        <div class="error-message">
            @ViewData.ModelState[""].Errors[0].ErrorMessage
        </div>
    }

    <form asp-action="Login" method="post" class="custom-form">
        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-input" />
            <span asp-validation-for="Email" class="form-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-input" type="password" />
            <span asp-validation-for="Password" class="form-error"></span>
        </div>
        <button type="submit" class="btn-submit">Login</button>
    </form>

    <div class="redirect-link">
        <p>Don't have an account? <a href="@Url.Action("Register", "Auth")">Register here</a></p>
    </div>
</div>
